@model UserEditViewModel

@{
    ViewBag.Title = "Modification du profil";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { role = "form" }))
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        <div class="">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
        <div class="">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <div class="form-group actions">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-default" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
