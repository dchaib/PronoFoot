@{
    ViewBag.Title = "Mot de passe oublié";
}

<h2>@ViewBag.Title ?</h2>
<p>
    Pour réinitialiser votre mot de passe, saisissez votre identifiant.
</p>

@using (Html.BeginForm("RequestPasswordReset", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("username", "Identifiant", new { @class = "control-label" })
        <div class="">
            @Html.TextBox("username", null, new { @class = "form-control" })
            @Html.ValidationMessage("username")
        </div>
    </div>
    <div class="form-group actions">
        <input value="Envoyer" type="submit" class="btn btn-primary" />
    </div>
}