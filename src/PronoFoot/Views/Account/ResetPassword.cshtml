@model PronoFoot.Models.ResetPasswordModel

@{
    ViewBag.Title = "Réinitialisation du mot de passe";
}

<h2>@ViewBag.Title</h2>
<p>
    Le nouveau mot de passe doit contenir au moins @Membership.MinRequiredPasswordLength caractères.
</p>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true, "La modification du mot de passe a échoué. Veuillez corriger les erreurs et recommencer..")

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
        <div class="">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        <div class="">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Modifier" class="btn btn-default" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}